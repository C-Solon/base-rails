<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all portfolios
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new portfolio
    </h2>

    <form action="/insert_portfolio" method="post">
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create portfolio
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @portfolios.each do |portfolio| %>
      <tr>
        <td>
          <%= portfolio.id %>
        </td>

        <td>
          <%= portfolio.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(portfolio.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(portfolio.updated_at) %> ago
        </td>

        <td>
          <a href="/portfolios/<%= portfolio.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
